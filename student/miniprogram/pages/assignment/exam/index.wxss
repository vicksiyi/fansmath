.widget {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  padding: 10rpx;
  box-shadow: 1rpx 1rpx 10rpx #dddee1;
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
}

.widget image {
  width: 70rpx;
  height: 70rpx;
  margin: 5rpx;
  border-radius: 50%;
}

swiper {
  width: 100%;
}

.topic {
  overflow: scroll;
}

.topic .title image {
  width: 700rpx;
  height: 100rpx;
  margin: 10rpx 25rpx 10rpx 25rpx;
}

.topic .title {
  min-height: 120rpx;
}

.topic .title .name {
  height: auto;
}

.topic .title>view {
  font-weight: normal;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 25rpx;
}

.line {
  width: 90%;
  height: 1rpx;
  background: #e9eaec;
  margin: 60rpx auto;
}

.result .item image {
  width: 300rpx;
  height: 100rpx;
}

.img-list {
  width: 700rpx;
  margin: 30rpx auto;
}

.img-list .img {
  width: 600rpx;
  margin: auto;
}

.img-list .img image {
  width: 600rpx;
  max-height: 300rpx;
}

.img-list .img-default {
  width: 200rpx;
  height: 200rpx;
  margin: 30rpx auto;
}

.img-list .img-default image {
  width: 200rpx;
  height: 200rpx;
}