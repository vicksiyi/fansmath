.header-container {
  width: 100%;
  height: 400rpx;
  background-color: #2db7f5;
  margin-bottom: 20rpx;
}

.info-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 60rpx 80rpx 50rpx 80rpx;
}

.info-icon {
  width: 130rpx;
  height: 130rpx;
  margin-right: 30rpx;
}

.info-name {
  font-size: 38rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.info-title-school {
  font-size: 28rpx;
  color: #fff;
}

.info-line {
  border: 1rpx solid #fff;
  width: 90%;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.info-context {
  width: 90%;
  height: 120rpx;
  margin: 0 auto;
  font-size: 30rpx;
  color: #fff;
}

.context-container {
  width: 90%;
  height: 700rpx;
  margin: 0 auto;
}

.class-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.class-item-container {
  width: 45%;
  height: 250rpx;
  padding: 10rpx;
  margin: 7rpx;
}

.class-img {
  width: 100%;
  height: 210rpx;
}

.class-text {
  color: #1c2438;
  font-size: 28rpx;
}

.answer-container {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.answer-item-container {
  width: 95%;
  margin: 0 auto;
  border-bottom: 1rpx solid #e8eaec;
}

.answer-date-class {
  display: flex;
  font-size: 28rpx;
  color: #17233d;
  padding: 10rpx 34rpx;
  margin-right: 10rpx;
}

.answer-date {
  color: #808695;
  margin-right: 15rpx;
}

.answer-class {
  color: #2db7f5;
  margin: 0 15rpx;
}

.answer-teacher {
  width: 90%;
  margin: 0 auto;
  padding: 10rpx 0;
  color: #515a6e;
  font-size: 32rpx;
}

.answer-question {
  width: 90%;
  display: flex;
  align-items: center;
  margin: 20rpx auto;
  background-color: #e8f7fd;
  padding: 0 20rpx;
}
.question-container {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  columns: #808695;
  padding: 20rpx;
}
