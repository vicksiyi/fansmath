.context-container {
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.tab-container {
  width: 60%;
}

.barrage-container {
  margin-right: 20rpx;
}

.barrage-text {
  font-size: 28rpx;
  margin: 20rpx;
  color: #1c2438;
}

.barrage-icon {
  width: 45rpx;
  height: 45rpx;
}

.tab-container {
  padding: 10rpx 20rpx;
}

.tab-context-container {
  color: #17233d;
}

.sedtitle-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 10rpx;
}

.sedtitle-img {
  width: 45rpx;
  height: 45rpx;
  margin: 0 20rpx;
}

.sedtitle-text {
  font-size: 36rpx;
  color: #515a6e;
  font-weight: bold;
}

.detail-context {
  width: 150%;
  padding: 0 20rpx;
  margin: 10rpx;
  color: #17233d;
  font-size: 32rpx;
  line-height: 2;
}

.detail-context .link {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.material-img {
  width: 100%;
  height: 700rpx;
}
