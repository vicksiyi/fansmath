page {
  background-color: #f8f8f9;
}

.item-container {
  width: 90%;
  height: 460rpx;
  background-color: #fff;
  margin: 50rpx auto;
  display: flex;
  flex-direction: column;
  position: relative;
  -moz-box-shadow: 1px 1px 5px #e9eaec;
  -webkit-box-shadow: 1px 1px 5px #e9eaec;
  box-shadow: 1px 1px 5px #e9eaec;
}

.item-img {
  width: 100%;
  height: 380rpx;
  background-color: #f8f8f9;
}

.title-container {
  width: 250rpx;
  height: 40rpx;
  background-color: #2db7f5;
  position: absolute;
  top: 340rpx;
  right: 0rpx;
}

.item-title {
  color: white;
  font-size: 32rpx;
  position: relative;
  text-align: center;
}

.footer-container {
  height: 65rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.footer-item-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.footer-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #515a6e;
}
